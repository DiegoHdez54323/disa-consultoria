---
import { MapPin } from "lucide-react";
---

<section class="py-16">
  <div class="container mx-auto px-6">
    <div class="relative rounded-2xl overflow-hidden border border-border/50 reveal-on-scroll">
      <div class="relative h-[400px] bg-gradient-card">
        <div class="absolute inset-0 bg-grid opacity-30" />
        <div class="absolute inset-0 flex items-center justify-center z-10">
          <div class="text-center">
            <div class="w-20 h-20 rounded-2xl bg-primary/10 flex items-center justify-center mx-auto mb-4">
              <MapPin className="w-10 h-10 text-primary" />
            </div>
            <h3 class="font-sora text-2xl font-bold text-foreground mb-2">
              Ciudad de México, México
            </h3>
            <p class="text-muted-foreground">
              Trabajamos de forma remota con clientes en todo el mundo
            </p>
          </div>
        </div>
        
        {/* Elementos decorativos con CSS puro */}
        <div class="absolute top-1/4 left-1/4 w-4 h-4 rounded-full bg-primary/50 animate-pulse-slow" />
        <div class="absolute bottom-1/3 right-1/3 w-3 h-3 rounded-full bg-accent/50 animate-pulse-slower" />
        <div class="absolute top-1/2 right-1/4 w-2 h-2 rounded-full bg-secondary/50 animate-pulse-fast" />
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de entrada simple */
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    animation: reveal 0.8s forwards;
    animation-timeline: view(); /* Moderno, o usa el script de IntersectionObserver */
    animation-range: entry 10% cover 20%;
  }

  @keyframes reveal {
    to { opacity: 1; transform: translateY(0); }
  }

  /* Animaciones continuas de las bolitas */
  .animate-pulse-slow { animation: pulse-scale 4s infinite ease-in-out; }
  .animate-pulse-slower { animation: pulse-scale 5s infinite ease-in-out; }
  .animate-pulse-fast { animation: pulse-scale 3s infinite ease-in-out; }

  @keyframes pulse-scale {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.3); opacity: 0.8; }
  }
</style>