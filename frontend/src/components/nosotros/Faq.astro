---
import { FaqAccordion } from "./FaqAccordion";
import { faqItems } from "@/data/nosotros/faqItems";
---

<section class="py-24 bg-background border-t border-border/50 overflow-hidden">
  <div class="container mx-auto px-6 max-w-3xl">
    <div class="text-center mb-16">
      <h2 class="font-orbitron text-3xl font-bold mb-4">
        Preguntas Frecuentes
      </h2>
      <p class="text-muted-foreground">Resolvemos tus dudas antes de iniciar.</p>
    </div>

    <FaqAccordion client:load items={faqItems} />
  </div>
</section>
