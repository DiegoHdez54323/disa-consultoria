---
import { FaqAccordion } from "./FaqAccordion";
import { faqItems } from "@/data/nosotros/faqItems";
---

<section class="py-24 relative bg-card/30">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 animate-slide-up">
      <span
        class="text-primary font-medium text-sm tracking-wider uppercase mb-4 block"
      >
        Resolvemos dudas
      </span>
      <h2 class="font-sora text-3xl md:text-4xl font-bold mb-4">
        Preguntas <span class="text-gradient-primary">frecuentes</span>
      </h2>
    </div>

    <div class="max-w-3xl mx-auto animate-fade-in">
      <FaqAccordion client:load items={faqItems} />
    </div>
  </div>
</section>
