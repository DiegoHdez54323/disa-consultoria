---
import { Github, Linkedin, Twitter, Instagram } from "lucide-astro";
import { company } from "../config/company"; // Importamos la config
import DisaFullLogo from "../assets/DisaFullLogo.svg";

// Links usando las rutas definidas en company.ts
const footerLinks = {
  servicios: [
    { label: "Desarrollo a Medida", href: company.routes.services },
    { label: "Integraciones & APIs", href: company.routes.services },
    { label: "Consultoría", href: company.routes.services },
    { label: "Cloud & DevOps", href: company.routes.services },
  ],
  empresa: [
    { label: "Nosotros", href: "/nosotros" }, // Si no tienes ruta 'about' en config, usa hardcode o agrégala
    { label: "Portafolio", href: company.routes.portfolio },
    { label: "Blog", href: company.routes.blog },
    { label: "Contacto", href: company.routes.contact },
  ],
  legal: [
    { label: "Privacidad", href: company.routes.privacy },
    { label: "Términos", href: company.routes.terms },
  ],
};

const socialLinks = [
  { icon: Github, href: company.social.github, label: "GitHub" },
  { icon: Linkedin, href: company.social.linkedin, label: "LinkedIn" },
  { icon: Twitter, href: company.social.twitter, label: "Twitter" },
  { icon: Instagram, href: company.social.instagram, label: "Instagram" },
];

const year = new Date().getFullYear();
---

<footer class="relative bg-card border-t border-border/50">
  {/* Glow accent */}
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-linear-to-r from-transparent via-primary/50 to-transparent"
  >
  </div>

  <div class="container mx-auto px-6 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-12">
      {/* Brand */}
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-6">
          <DisaFullLogo class="h-6 w-auto md:h-8 lg:h-10" />
        </a>
        <p class="font-inter text-muted-foreground mb-6 max-w-sm">
          {company.description}
        </p>

        {/* Social Links */}
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                aria-label={social.label}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg bg-muted/50 flex items-center justify-center text-muted-foreground hover:bg-primary/20 hover:text-primary transition-all"
              >
                <social.icon className="w-5 h-5" />
              </a>
            ))
          }
        </div>
      </div>

      {/* Links: Servicios */}
      <div>
        <h4 class="font-orbitron text-sm font-semibold text-foreground mb-4">
          Servicios
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.servicios.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="font-inter text-sm text-muted-foreground hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Links: Empresa */}
      <div>
        <h4 class="font-orbitron text-sm font-semibold text-foreground mb-4">
          Empresa
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.empresa.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="font-inter text-sm text-muted-foreground hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Links: Legal */}
      <div>
        <h4 class="font-orbitron text-sm font-semibold text-foreground mb-4">
          Legal
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="font-inter text-sm text-muted-foreground hover:text-primary transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    {/* Bottom */}
    <div
      class="mt-16 pt-8 border-t border-border/50 flex flex-col md:flex-row items-center justify-between gap-4"
    >
      <p class="font-inter text-sm text-muted-foreground">
        © {year}
        {company.name}. Todos los derechos reservados.
      </p>
      <p class="font-inter text-sm text-muted-foreground">
        Diseñado con <span class="text-primary">♥</span> en México
      </p>
    </div>
  </div>
</footer>
