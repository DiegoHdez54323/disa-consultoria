---
import type { BlogPost } from "../../../sanity/types/blog";
import { Clock, User, ChevronRight } from "lucide-astro";
import {
  getPostMainCategory,
  getPostImageUrl,
  formatBlogReadTime,
} from "../../../utils/blog/post-helpers";

interface Props {
  relatedPosts: BlogPost[];
  mainCategoryTitle?: string;
}

const { relatedPosts, mainCategoryTitle } = Astro.props as Props;
---

<!-- Related Posts -->
<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-muted/30"></div>
  <div class="absolute inset-0 bg-grid opacity-10"></div>

  <div class="relative container mx-auto px-6">
    <div class="flex items-center justify-between mb-12">
      <div>
        <h2
          class="font-sora text-3xl md:text-4xl font-bold text-foreground mb-2"
        >
          Artículos{" "}
          <span class="text-gradient-primary">relacionados</span>
        </h2>
        {
          mainCategoryTitle && (
            <p class="font-inter text-muted-foreground">
              Continúa explorando sobre {mainCategoryTitle}
            </p>
          )
        }
      </div>
      <a
        href="/blog"
        class="hidden md:flex items-center gap-2 text-primary font-inter font-medium hover:gap-3 transition-all"
      >
        Ver todos
        <ChevronRight class="w-4 h-4" />
      </a>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        relatedPosts.map((relatedPost, index) => {
          const relatedMainCategory = getPostMainCategory(relatedPost);
          const relatedImageUrl = getPostImageUrl(relatedPost);

          return (
            <article class="group" data-index={index}>
              <a href={`/blog/${relatedPost.slug}`}>
                <div class="relative h-full rounded-2xl overflow-hidden border border-border/50 bg-card transition-all duration-500 hover:border-primary/30 hover:glow-primary">
                  <div class="relative h-48 overflow-hidden">
                    {relatedImageUrl && (
                      <img
                        src={relatedImageUrl}
                        alt={relatedPost.mainImage?.alt || relatedPost.title}
                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                      />
                    )}
                    <div class="absolute inset-0 bg-linear-to-t from-card via-transparent to-transparent" />
                  </div>
                  <div class="p-6">
                    {relatedMainCategory && (
                      <span class="inline-block px-3 py-1 rounded-full bg-primary/20 text-primary text-xs font-inter font-medium mb-3">
                        {relatedMainCategory.title}
                      </span>
                    )}
                    <h3 class="font-sora text-lg font-semibold text-foreground mb-3 line-clamp-2 group-hover:text-primary transition-colors">
                      {relatedPost.title}
                    </h3>
                    <div class="flex flex-col flex-wrap items-start gap-2 text-xs text-muted-foreground sm:flex-row sm:items-center sm:gap-4">
                      <div class="flex items-center gap-2">
                        <User class="w-3 h-3" />
                        <span>{relatedPost.author.name}</span>
                      </div>
                      {relatedPost.readTime && (
                        <div class="flex items-center gap-1">
                          <Clock class="w-3 h-3" />
                          <span>
                            {formatBlogReadTime(relatedPost.readTime)}
                          </span>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </a>
            </article>
          );
        })
      }
    </div>
  </div>
</section>
