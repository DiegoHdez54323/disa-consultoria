---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ContactHero } from "../../components/contact/ContactHero";
import { ContactMethods } from "../../components/contact/ContactMethods";
import ContactInfo from "../../components/contact/ContactInfo.astro";
import { ContactForm } from "../../components/contact/ContactForm";
import MapSection from "../../components/contact/MapSection.astro";
---

<BaseLayout
  title="Contacto | DiSa Consultoría"
  description="Ponte en contacto con nosotros para tu próximo proyecto digital. Estamos listos para ayudarte."
  canonicalURL={new URL("/contacto", Astro.site)}
>
  <main class="min-h-screen bg-background">
    <ContactHero client:load />

    <ContactMethods client:visible />

    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <ContactInfo />
          <ContactForm client:visible />
        </div>
      </div>
    </section>

    <MapSection />
  </main>
</BaseLayout>
