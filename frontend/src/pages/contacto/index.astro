---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ContactHero } from "../../components/contact/ContactHero";
import { ContactMethods } from "../../components/contact/ContactMethods";
import { ContactInfo } from "../../components/contact/ContactInfo";
import { ContactForm } from "../../components/contact/ContactForm";
import { MapSection } from "../../components/contact/MapSection";
---

<BaseLayout tittle="Contact | DiSa Consultoria" description="Ponte en contacto con nosostros para tu proximo proyecto digital. ">
    <main class="min-h-screen bg-background">

        <ContactHero client:load/>

        <ContactMethods client:visible/>

        <section class="py-20">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-2 gap-16 items-start">
                    <ContactInfo client:visible/>
                    <ContactForm client:visible/>
                </div>
            </div>

        </section>

        <MapSection client:visible/>
    </main>
</BaseLayout>